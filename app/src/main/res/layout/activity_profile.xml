<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp" android:gravity="center" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView android:id="@+id/imgAvatarPreview"
        android:layout_width="120dp" android:layout_height="120dp"
        android:src="@drawable/bg" android:scaleType="centerCrop"/>

    <Button android:id="@+id/btnChooseAvatar" android:text="Chọn ảnh"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <EditText android:id="@+id/edtUserName" android:hint="Tên hiển thị"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button android:id="@+id/btnSaveProfile" android:text="Lưu thay đổi"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>

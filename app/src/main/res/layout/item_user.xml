<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="12dp" android:orientation="horizontal"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="48dp" android:layout_height="48dp"
        android:src="@drawable/ic_launcher_background" android:scaleType="centerCrop"/>

    <LinearLayout
        android:orientation="vertical" android:layout_marginStart="12dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content">

        <TextView android:id="@+id/tvName" android:text="User Name"
            android:textStyle="bold" android:textSize="16sp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView android:id="@+id/tvEmail" android:text="email@domain.com"
            android:textSize="13sp" android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>

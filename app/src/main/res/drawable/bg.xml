<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 100% nền màu cam -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FB1100"/>
        </shape>
    </item>


    <!-- Phần dưới phủ màu xanh chiếm 50% -->
    <item android:top="200dp">
        <shape android:shape="rectangle">
            <solid android:color="#CCCACA"/>
        </shape>
    </item>
    <!-- Phần trên phủ màu xanh chiếm 50% -->
    <item android:bottom="200dp">
        <shape android:shape="rectangle">
            <solid android:color="#7DBF8D"/>
        </shape>
    </item>

</layer-list>
